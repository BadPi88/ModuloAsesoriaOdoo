<odoo>
    <record id="view_company_form_inherit_modelo200" model="ir.ui.view">
        <field name="name">res.company.form.inherit.modelo200</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group string="Representante Legal">
                    <field name="admin_name"/>
                    <field name="admin_nif"/>
                    <field name="admin_position"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
