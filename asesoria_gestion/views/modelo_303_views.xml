<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_form_modelo_303" model="ir.ui.view">
    <field name="name">asesoria.modelo_303.form</field>
    <field name="model">asesoria.modelo_303</field>
    <field name="arch" type="xml">
      <form string="Modelo 303">
        <sheet>
          <group>
            <field name="name"/>
            <field name="cliente_id"/>
            <field name="ejercicio"/>
            <field name="periodo"/>
          </group>
          <group string="Resultado">
            <field name="casilla_27"/>
            <field name="casilla_45"/>
            <field name="casilla_46" readonly="1"/>
          </group>
          <group string="Atribución Estatal">
            <field name="porcentaje_estado"/>
            <field name="atribuible_estado" readonly="1"/>
          </group>
          <group>
            <field name="xml_file" filename="xml_filename"/>
          </group>
          <footer>
            <button name="generar_xml_303" type="object" string="Exportar XML" class="btn-primary"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_modelo_303" model="ir.actions.act_window">
    <field name="name">Modelo 303</field>
    <field name="res_model">asesoria.modelo_303</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_root_asesoria" name="Asesoría"/>
  <menuitem id="menu_modelos" name="Modelos" parent="menu_root_asesoria"/>
  <menuitem id="menu_modelo_303" name="Modelo 303" parent="menu_modelos" action="action_modelo_303"/>
</odoo>